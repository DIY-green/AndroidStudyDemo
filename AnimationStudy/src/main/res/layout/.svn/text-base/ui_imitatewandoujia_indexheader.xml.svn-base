<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    android:background="#FFCCCCCC">
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/app_padding"
        android:layout_marginRight="@dimen/app_padding"
        android:layout_marginTop="107dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/search_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="搜索"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/index_header_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:orientation="horizontal">
        <include
            android:id="@+id/discover_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/ui_imitatewandoujia_indexnavitem"/>
        <include
            android:id="@+id/blog_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/ui_imitatewandoujia_indexnavitem"/>
        <include
            android:id="@+id/mine_item"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/ui_imitatewandoujia_indexnavitem" />
        <include
            android:id="@+id/more_item"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/ui_imitatewandoujia_indexnavitem" />
    </LinearLayout>
</RelativeLayout>
