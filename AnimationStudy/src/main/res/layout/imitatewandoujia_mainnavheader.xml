<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FF000000" >
    <RelativeLayout
        android:id="@+id/main_nav_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.cheng.animationstudy.customview.wandoujia.IconTabItem
            android:id="@+id/main_tab_index"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:button="@mipmap/ic_launcher"
            android:checked="true"
            android:gravity="center"
            android:background="#ff9966"
            app:drawableHeight="@dimen/tab_item_icon_size"
            app:drawableWidth="@dimen/tab_item_icon_size"/>
        <RadioGroup
            android:id="@+id/middle_tab_group"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal">
            <com.cheng.animationstudy.customview.wandoujia.IconTabItem
                android:id="@+id/main_tab_ranking"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="#33cccc"
                android:button="@mipmap/ic_launcher"
                app:drawableWidth="@dimen/tab_item_icon_size"
                app:drawableHeight="@dimen/tab_item_icon_size"/>
            <com.cheng.animationstudy.customview.wandoujia.IconTabItem
                android:id="@+id/main_tab_blog"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="#339933"
                android:button="@mipmap/ic_launcher"
                app:drawableHeight="@dimen/tab_item_icon_size"
                app:drawableWidth="@dimen/tab_item_icon_size" />
            <com.cheng.animationstudy.customview.wandoujia.IconTabItem
                android:id="@+id/main_tab_mine"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="#3366ff"
                android:button="@mipmap/ic_launcher"
                app:drawableHeight="@dimen/tab_item_icon_size"
                app:drawableWidth="@dimen/tab_item_icon_size" />
            <com.cheng.animationstudy.customview.wandoujia.IconTabItem
                android:id="@+id/main_tab_more"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:button="@mipmap/ic_launcher"
                android:background="#6699cc"
                app:drawableHeight="@dimen/tab_item_icon_size"
                app:drawableWidth="@dimen/tab_item_icon_size" />
        </RadioGroup>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:background="#FFff9966"
        android:orientation="horizontal"/>
</RelativeLayout>
